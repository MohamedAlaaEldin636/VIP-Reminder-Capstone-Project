<LinearLayout
    android:id="@+id/rootLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/lightBlueColorPrimaryVeryVeryLight">

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:text="Today"
        android:textSize="@dimen/list_widget_title_text_size"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        android:layout_gravity="center"
        android:gravity="center"

        android:padding="@dimen/list_widget_title_padding"

        android:maxLines="1"
        android:ellipsize="end"

        android:background="@color/lightBlueColorPrimaryDark"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="@dimen/list_widget_list_view_padding"

            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/emptyViewTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone"

            android:gravity="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"

            android:background="@color/lightBlueColorPrimaryVeryVeryLight"

            android:text="@string/no_reminders_found"/>

    </FrameLayout>

</LinearLayout>